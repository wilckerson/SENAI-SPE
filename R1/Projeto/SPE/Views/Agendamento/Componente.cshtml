@model SPE.ViewModel.AgendaComponenteViewModel
@{
    ViewBag.Title = "Componente";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Turma")

<div class="container">
    <div class="white_box">
        <div class="container-fluid">

            <h1>Agendar componente</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>
                    @Html.Partial("_CadastrarOuEditar", Model)
                </fieldset>
          

            <div class="buttons">
                <button class="btns btn-large btn-principal" value="Salvar"  onclick="OnClickSalvarAgendaComponente()">Salvar</button>
            <a class="btns btn-large " href="/Turma/EditarTurma/@Model.IdTurma">Voltar a Turma</a>
             
            </div>
            }

        </div>
    </div>

</div>