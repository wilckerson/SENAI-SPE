@model SPE.ViewModel.AmbienteViewModel

@{
    ViewBag.Title = "Details";
}

    @Html.Partial("../Shared/_MenuCarroselCadastro","Ambiente")
 <div class="container">
    <div class="white_box">

        <div class="container-fluid">
        <h1>Detalhes Ambiente</h1>

<h3> Ambiente</h3>
        <fieldset>
            <legend></legend>

            <table border="1" class="table table-striped">
              
                <tr>
                    <th> <div class="display-label">Nome:</div></th>
                    <td> <div class="display-field">@Model.Nome</div></td>
                </tr>
                <tr>
                    <th> <div class="display-label">Localidade:</div></th>
                    <td> <div class="display-field">@if (Model.LocalAmbiente != null)
                                                    {
                                                        @Model.LocalAmbiente.Descr;
                                                    }</div></td>
                </tr>
                <tr>
                    <th> <div class="display-label">Tipo de Ambiente:</div></th>
                    <td> <div class="display-field">@if (Model.LocalAmbiente != null)
                                                    {
                                                        @Model.TipoAmbiente.Descr;
                                                    }</div></td>
                </tr>
                <tr>
                    <th> <div class="display-label">Capacidade:</div></th>
                    <td> <div class="display-field">@Model.Capac</div></td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">@Html.ActionLink("Editar", "EditarAmbiente", new { id = Model.IdAmbiente }, new { @class = "btn"})</td>
                </tr>

            </table>
        </fieldset>
        <p>
            @Html.ActionLink("Lista de Ambientes", "Index",null, new { @class = "btns btn-large btn-principal"})
        </p>
    </div>
</div>
     </div>