@model SPE.ViewModel.LocalAmbienteViewModel

@{
    ViewBag.Title = "Cadastrar Local";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Local Ambiente")
<script src="~/Scripts/LocalAmbiente/localAmbiente.js"></script>
<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Cadastrar Local</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>

                    @Html.Partial("_CadastrarOuEditar", Model)

                </fieldset>
                
                <div class="buttons">
                    <input type="submit" value="Salvar" class="btns btn-large btn-principal" />
                    @Html.ActionLink("Lista de Locais", "Index", null, new { @class = "btns btn-large" })
                </div>

            }
        </div>
    </div>
</div>
