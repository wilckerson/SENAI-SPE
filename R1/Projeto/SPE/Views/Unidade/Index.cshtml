@model List<SPE.ViewModel.UnidadeViewModel>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Unidade")
<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Lista de Unidades</h1>
            <hr />

            <div class="filtro">
                <h4>Filtros</h4>
                <table class="camposFiltro">
                    <tr>
                    </tr>
                </table>
            </div>

            <table id="dataTable" class="table table-striped" style="margin-bottom: 20px;">
                <thead>
                    <tr>
                        <th search>Código
                        </th>
                        <th search>Nome
                        </th>
                        <th filtered>Habilitado
                        </th>
                        <th style="width: 10%; cursor: default">Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (true)
                    {
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Codigo
                            </td>
                            <td>
                                @item.Descr
                            </td>
                            <td>
                                @if (item.Status == 1)
                                {
                                    @:Sim
                                }
                                else
                                {
                                    @:Não
                                }
                            </td>
                            <td>
                                <div class="btn" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" onclick="Editar('/Unidade/EditarUnidade/@item.IdUnidade');" href=""><i class="icon-edit" alt="editar"></i></div>
                                <div class="btn" data-toggle="tooltip" data-placement="top" title="" data-original-title="Excluir" onclick="Excluir(@item.IdUnidade);"><i class="icon-ban-circle"></i><a href="#" alt="Excluir"></a></div>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" style="text-align: center;">Não há Unidades cadastradas.</td>
                        </tr>
                    }

                </tbody>

            </table>

            <div class="buttons">
                @Html.ActionLink("Adicionar Unidade", "CadastrarUnidade", null, new { @class = "btns btn-large btn-principal" })
            </div>
        </div>

    </div>
</div>

@Html.Partial("../Shared/_ModalConfirmacaoExcluir", "/Unidade/ExcluirUnidade/")

