@model SPE.ViewModel.RecursoViewModel

@{
    ViewBag.Title = "Editar Recurso";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Recurso")
<script src="~/Scripts/Recurso/recurso.js"></script>
<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Editar Recurso</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>

                    @Html.HiddenFor(model => model.idRecurso)
                    @Html.Partial("_CadastrarOuEditar", Model)

                </fieldset>

                <div class="buttons">
                    <input type="submit" value="Salvar" class="btns btn-large btn-principal" />
                    @Html.ActionLink("Lista de Recursos", "Index", null, new { @class = "btns btn-large" })

                </div>
            }
        </div>
    </div>
</div>
