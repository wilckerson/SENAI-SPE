@model SPE.ViewModel.PerfilVM

@{
    ViewBag.Title = "CadastrarUsuario";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Perfil")

@section Head 
    {
    <script type="text/javascript" src="~/Scripts/Perfil/Perfil.js"></script>
}

<div class="container">
    <div class="white_box">
        <div class="container-fluid">

            <h1>Cadastrar Perfil de Usuário</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>

                    @Html.Partial("_CadastrarOuEditar", Model)
                </fieldset>
          

                <div class="buttons">
                    <input type="submit" value="Salvar" class="btns btn-large btn-principal" id="salvarPerfil">
                    @Html.ActionLink("Lista de Perfis", "Index", null, new { @class = "btns btn-large" })
                </div>
            }

        </div>
    </div>

</div>
