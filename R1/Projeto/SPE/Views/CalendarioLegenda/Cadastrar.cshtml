@model SPE.ViewModel.CalendarioLegendaViewModel

@{
    ViewBag.Title = "CadastrarCalendarioLegenda";
}
<script src="~/Scripts/CalendarioLegenda/calendarioLegenda.js"></script>
@Html.Partial("../Shared/_MenuCarroselCadastro", "CalendarioLegenda")
<div class="container">
    <div class="white_box">
        <div class="container-fluid">


            <h1>Cadastrar Legenda</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>

                    @Html.Partial("_CadastrarOuEditar", Model)


                </fieldset>


                <div class="buttons">
                    <input type="submit" value="Salvar" class="btns btn-large btn-principal" />

                    @Html.ActionLink("Lista de Modalidades", "Index", null, new { @class = "btns btn-large" })
                </div>

            }
        </div>
    </div>
</div>

