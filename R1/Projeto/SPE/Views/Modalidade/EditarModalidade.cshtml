@model SPE.ViewModel.ModalidadeViewModel

@Html.Partial("../Shared/_MenuCarroselCadastro", "Modalidade")
<script src="~/Scripts/Modalidade/modalidade.js"></script>
<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Editar Modalidade</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>

                    @Html.HiddenFor(model => model.IdModalidade)
                    @Html.Partial("_CadastrarOuEditar", Model)


                </fieldset>
            

                <div class="buttons">
                    <input type="submit" value="Salvar" class="btns btn-large btn-principal" />
                    @Html.ActionLink("Lista de Modalidades", "Index", null, new { @class = "btns btn-large" })
                </div>
            }
        </div>
    </div>
</div>
