@model IEnumerable<Senai.SPE.Domain.TipoAtividade>

@{
    ViewBag.Title = "Index";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Tipo Atividade")
<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Lista de Tipos de Atividade</h1>
            <hr />

            <div class="filtro">
                <h4>Filtros</h4>
                <table class="camposFiltro">
                    <tr>
                    </tr>
                </table>
            </div>

            <table id="dataTable" class="table table-striped" style="margin-bottom: 20px;">
                <thead>
                    <tr>
                        <th search>Tipo
                        </th>
                        <th filtered>Interno
                        </th>
                        <th style="width: 10%; cursor: default">Ações
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.Nome
                            </td>
                            <td>
                                @if (item.Interna)
                                {
                                    @:Sim
                                }
                                else
                                {
                                    @:Não
                                }
                            </td>
                            <td>
                                <div class="btn" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" onclick="Editar('/TipoAtividade/EditarTipoAtividade/@item.IdTipoAtividade');" href=""><i class="icon-edit" alt="editar"></i></div>
                                <div class="btn" data-toggle="tooltip" data-placement="top" title="" data-original-title="Excluir" onclick="Excluir(@item.IdTipoAtividade);"><i class="icon-ban-circle"></i><a href="#" alt="Excluir"></a></div>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" style="text-align: center;">Não há Tipos de Atividade cadastrados.</td>
                        </tr>
                    }
                </tbody>

            </table>

            <div class="buttons">
                @Html.ActionLink("Adicionar Tipo de Atividade", "CadastrarTipoAtividade", null, new { @class = "btns btn-large btn-principal" })
            </div>
        </div>

    </div>
</div>

@Html.Partial("../Shared/_ModalConfirmacaoExcluir", "/TipoAtividade/ExcluirTipoAtividade/")