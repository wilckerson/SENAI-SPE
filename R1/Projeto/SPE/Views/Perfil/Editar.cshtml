@model SPE.ViewModel.PerfilVM
@{
    ViewBag.Title = "EditarUsuario";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Perfil")
  @section Head 
    {
        <script type="text/javascript" src="~/Scripts/Perfil/Perfil.js"></script>
    }

<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Editar Perfil de Usuário</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>

                    @Html.Partial("_CadastrarOuEditar", Model)
                    @Html.HiddenFor(e => e.Perfil.idPerfil)
                    @Html.HiddenFor(e => e.Perfil.Nome)                    
                    @Html.HiddenFor(e => e.Perfil.Descricao)                  
                    @Html.HiddenFor(e => e.Perfil.Status)
                    @Html.HiddenFor(e => e.Perfil.AprovarMatriz)
                    @Html.HiddenFor(e => e.Perfil.AprovarTurma)
                    @Html.HiddenFor(e => e.Perfil.ExpirarMatriz)

                </fieldset>
          

            <div class="buttons">
                <input type="submit" value="Salvar" class="btns btn-large btn-principal" onclick="return SalvarPerfil();" />
                 @Html.ActionLink("Lista de Perfis", "Index", null, new { @class = "btns btn-large" })
               
            </div>
            }
        </div>
    </div>
</div>
