@model SPE.ViewModel.ComponenteViewModel
@{
    ViewBag.Title = "EditarComponente";
}
@Html.Partial("../Shared/_MenuCarroselCadastro", "Componente")


<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Editar Componente</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)


                    @Html.HiddenFor(model => model.IdComponente)
                    @Html.Partial("_CadastrarOuEditar", Model)



            
            <div class="buttons">
                <input  type="submit" value="Salvar" class="btns btn-large btn-principal" onclick="return SalvarComponente();" />
           
                @Html.ActionLink("Lista de Componentes", "Index", null, new { @class = "btns btn-large" }) </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/Componente/Componente.js"></script>
}

