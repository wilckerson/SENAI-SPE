@model SPE.ViewModel.TurnoViewModel

@{
    ViewBag.Title = "Details";
}

@Html.Partial("../Shared/_MenuCarroselCadastro", "Turno")
<div class="container">
    <div class="white_box">

        <div class="container-fluid">
            <h1>Detalhes Turno</h1>

            <h3>Turno</h3>
            <fieldset>
                <legend></legend>

                <table border="1" class="table table-striped">

                    <tr>
                        <th>
                            <div class="display-label">Nome:</div>
                        </th>
                        <td>
                            <div class="display-field">@Model.Descr</div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center;">@Html.ActionLink("Editar", "EditarTurno", new { id = Model.IdTurno }, new { @class = "btn" })</td>
                    </tr>

                </table>
            </fieldset>
            <p>
                @Html.ActionLink("Lista de Turnos", "Index", null, new { @class = "btns btn-large btn-principal" })
            </p>
        </div>
    </div>
</div>


