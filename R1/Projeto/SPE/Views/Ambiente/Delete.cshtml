@model SPE.ViewModel.AmbienteViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>AmbienteViewModel</legend>

    <div class="display-label">Nome:</div>
    <div class="display-field">@Model.Nome</div>

    <div class="display-label">Localidade:</div>
    <div class="display-field">
        @if (Model.LocalAmbiente != null)
        {
            @Model.LocalAmbiente.Descr;
        }
    </div>

    <div class="display-label">Tipo de Ambiente:</div>
    <div class="display-field">
        @if (Model.LocalAmbiente != null)
        {
            @Model.TipoAmbiente.Descr;
        }
    </div>

    <div class="display-label">Capacidade:</div>
    <div class="display-field">@Model.Capac</div>

</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


