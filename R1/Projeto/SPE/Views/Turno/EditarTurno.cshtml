@model SPE.ViewModel.TurnoViewModel

@Html.Partial("../Shared/_MenuCarroselCadastro", "Turno")
<script src="~/Scripts/Turno/turno.js"></script>
<div class="container">
    <div class="white_box">
        <div class="container-fluid">
            <h1>Editar Turno</h1>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend></legend>

                    @Html.HiddenFor(model => model.IdTurno)
                    @Html.Partial("_CadastrarOuEditar", Model)

                </fieldset>
          

                <div class="buttons">
                    <input type="submit" value="Salvar" class="btns btn-large btn-principal" />
                    @Html.ActionLink("Lista de Turnos", "Index", null, new { @class = "btns btn-large" })

                </div>
            }
        </div>
    </div>
</div>
